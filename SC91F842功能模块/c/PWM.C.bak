#include "h\SC91F72B_C.h"
//*************************************************************
// 函数名	：void PWMinit(void)
// 作者		：
// 功能		：PWM0/1分别输出1/2、1/4 Duty
// 参数		：无
// 返回值	：无
// 调用全局变量：无
// 修改全局变量：无
// 备注		：
//**************************************************************
void PWMinit(void)
{
 	PWMCFG = 0x03;			// - - 00 - 011  PWM0/1输出不反向,选择PWM时钟源为Fosc/8 = 2MHZ;1/2us
 	PWMPRD = 99;			//	PWM周期=(99+1)*(1/2us)=50us	;PWM0/1共用同一个周期
 	PWMDTY0 = 50;			//PWM0的Duty = 50/100 =1/2
 	PWMDTY1 = 25;			//PWM1的Duty = 25/100  =1/4
 	PWMCR = 0x85;			// 10-- 0101   开PWM,切换PWM0/1输出口
}
//*************************************************************
// 函数名	：void PWM() interrupt 5
// 作者		：
// 功能		：PWM产生50us的中断
// 参数		：无
// 返回值	：无
// 调用全局变量：无
// 修改全局变量：无
// 备注		：PWM中断需用户软件清除
//**************************************************************
void PWM() interrupt 5
{
		PWMIF=0; 				//PWM计数溢出，需用户自行清除
}
void main()
{
	RSTCFG=0x0b;     			//切换RstPin为GPIO,lvr选择3.5V复位
	WDTCR = 0x90;				//1--1 -- 00    开WDT,WDT清0,WDT 524.288ms溢出;烧录时，可Code Option选择ENWDT
	PWMinit();
	EA=1;						//开总中断
	for(; ; );
}